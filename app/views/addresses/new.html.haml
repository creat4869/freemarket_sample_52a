.single-container.sign-up__addresses
  = render partial: 'single-header'
  %main.single-main.signup-page__header
    %section.single-main__container
      %h2.single-main__container__h2 住所入力
      = form_for @address, html: {class: "single-main__container__form"} do |f|
        .single-main__container__form__content
          .form-group
            = f.label :郵便番号
            %span.form-group__require 必須
            = f.text_field :postal_code, class: "form-group__input", placeholder: "例) 1234567", autofocus: "true"
            - if @address.errors.messages[:postal_code].present?
              - @address.errors.messages[:postal_code].each do |message|
                %p.error= message
          .form-group
            = f.label :都道府県
            %span.form-group__require 必須
            .select-wrap.select-prefecture
              = f.select :prefecture, Address.prefectures.keys, {prompt: '--'}, class: "select-wrap__default"
              %i.fas.fa-chevron-down
            - if @address.errors.messages[:prefecture].present?
              - @address.errors.messages[:prefecture].each do |message|
                %p.error= message
          .form-group
            = f.label :市区町村
            %span.form-group__require 必須
            = f.text_field :city, class: "form-group__input", placeholder: "例) 横浜市緑区", autofocus: "true"
            - if @address.errors.messages[:city].present?
              - @address.errors.messages[:city].each do |message|
                %p.error= message
          .form-group
            = f.label :番地
            %span.form-group__require 必須
            = f.text_field :address, class: "form-group__input", placeholder: "例) 青山1-1-1", autofocus: "true"
            - if @address.errors.messages[:address].present?
              - @address.errors.messages[:address].each do |message|
                %p.error= message
          .form-group
            = f.label :建物名
            %span.form-group__arbitrary 任意
            = f.text_field :building, class: "form-group__input", placeholder: "例) 柳ビル103", autofocus: "true"
          .form-group
            = f.label :電話番号
            %span.form-group__require 必須
            = f.text_field :tel, class: "form-group__input", placeholder: "例) 01234567890", autofocus: "true"
            - if @address.errors.messages[:tel].present?
              - @address.errors.messages[:tel].each do |message|
                %p.error= message
        .single-main__container__form__content
          = f.submit "次へ進む", class: "single-main__container__form__content__btn"
  = render partial: 'single-footer'
